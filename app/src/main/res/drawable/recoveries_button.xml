<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Transparent background -->
    <solid android:color="@android:color/transparent"/>

    <!-- Thick black border -->
    <stroke
        android:color="#000000"
        android:width="1dp"/>  <!-- Adjust the thickness as needed -->

    <!-- Rounded corners -->
    <corners android:radius="50dp"/> <!-- Fully round button, adjust for less roundness -->

    <!-- Padding inside the button (Optional) -->
    <padding
        android:left="16dp"
        android:top="12dp"
        android:right="16dp"
        android:bottom="12dp"/>
</shape>