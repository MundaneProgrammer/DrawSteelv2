<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer Border (Subtle Shadow Effect) -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="6dp"
                android:color="#66FFFFFF" />
            <corners android:radius="50dp" />
        </shape>
    </item>

    <!-- Main Bold Border -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="3dp"
                android:color="?attr/colorOnSurface" />  <!-- Adjust thickness for a cleaner look -->
            <corners android:radius="50dp" />
        </shape>
    </item>

</layer-list>
