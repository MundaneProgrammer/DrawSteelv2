<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Soft Glow Effect -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="6dp"
                android:color="#66FFFFFF" />  <!-- Thicker glow effect -->
            <corners android:radius="0dp" />
        </shape>
    </item>

    <!-- Main Square with Bold Border -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="3dp"
                android:color="?attr/colorOnSurface" />  <!-- Adjust thickness -->
            <corners android:radius="0dp" />
        </shape>
    </item>

</layer-list>
