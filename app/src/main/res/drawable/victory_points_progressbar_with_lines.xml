<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background layer -->
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="#E0E0E0"/> <!-- Light gray background -->
            <corners android:radius="4dp"/>
        </shape>
    </item>

    <!-- Progress layer (filled portion) -->
    <item android:id="@android:id/progress">
        <shape>
            <solid android:color="#4CAF50"/> <!-- Green progress color -->
            <corners android:radius="4dp"/>
        </shape>
    </item>

    <!-- Vertical lines to mark victory points -->
    <item android:id="@android:id/secondaryProgress">
        <shape>
            <solid android:color="#FF9800"/> <!-- Orange color for vertical lines -->
            <corners android:radius="0dp"/>
            <size android:width="2dp" android:height="24dp"/> <!-- Adjust the height as needed -->
            <pathData android:data="M 0,0 V 100%" /> <!-- Vertical line from top to bottom -->
        </shape>
    </item>
</layer-list>